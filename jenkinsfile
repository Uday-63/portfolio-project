pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/Uday-63/portfolio-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                  docker build -t portfolio-image .
                '''
            }
        }

        stage('Run Container on Port 4000') {
            steps {
                sh '''
                  docker rm -f portfolio-container || true
                  docker run -d \
                    --name portfolio-container \
                    -p 4000:80 \
                    portfolio-image
                '''
            }
        }

        stage('Archive HTML Artifact') {
            steps {
                archiveArtifacts artifacts: '**/*.html', fingerprint: true
            }
        }
    }
}
